<div class="container" style="margin-top:50px;">
    <div class="row">
        <p class="text-end">Hola {{persona}}! <a class="btn btn-danger"href="/admin/login/logout">Cerrar sesi√≥n <i class="fas fa-sign-out-alt"></i></a></p>
    </div>

        <div class="row">
            <div class="col-7">
                <h3>Listado de Servicios</h3>
            </div>
            <div class="col-5 text-end">
                <a class="btn btn-success" href="/admin/servicios/agregar"><i class="fa fa-plus" aria-hidden="true"></i>
                Nuevo</a>
            </div>
        </div>

        <div class="row">
            <div class="col">
                <table class="table">
                    <thead>
                        <tr class="table-dark">
                            <th scope="col">#</th>
                            <th scope="col">Servicios</th>
                            <th scope="col">Imagen</th>
                            <th class="text-end">Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#each servicios}}
                        <tr>
                            <th scope="row">{{id}}</th>
                            <td>{{Servicio}}</td>
                            <td>{{{imagen}}}</td>
                            <td class="text-end">
                                <a class="btn btn-secondary" href="/admin/servicios/modificar/{{id}}"><i class="fa fa-pencil" aria-hidden="true"></i></a>
                                <a class="btn btn-secondary" href="/admin/servicios/eliminar/{{id}} "><i class="fa fa-trash" aria-hidden="true"></i></a>
                            </td>
                        </tr>
                        {{/each}}

                    </tbody>
                </table>
            </div>
        </div>
</div>