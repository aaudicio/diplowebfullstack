<div class="container" style="margin:100px 0">
    <div class="row">
        <div class="col-6 offset-3">
            <h4>Modificar el serivicio</h4>
            <form action="/admin/servicios/modificar" method="post" enctype="multipart/form-data">
            <input type="hidden" value="{{servicios.id}}" name="id">
            <div class="form-group">
                <label for="">Servicio</label>
                <input type="text" class="form-control" name="servicio" value="{{servicios.Servicio}}">
            </div>
            <div class="form-group">
                <label for="">Descripcion</label>
                <input type="text" class="form-control" name="descripcion" value="{{servicios.Descripcion}}">
            </div>
            <div class="form-group">
                <label for="">Precio</label>
                <textarea name="precio" class="form-control"> {{servicios.Precio}}</textarea>
            </div>

            <div class="form-group">
                <p>
                  <label>Imagen: <input type="file" class="form-control" name="imagen" id="imagen"/></label>  
                </p>
                <p>
                    <label> <input type="checkbox" name="img_delete" id="img_delete" value="1">
                    Eliminar imagen actual?</label>
                    <input type="hidden" name="img_original" value="{{servicio.img_id}}">
                </p>

            </div>

            <button type="submit" class="btn btn-primary">Modificar</button>
            </form>
            {{#if error}}
            <p>{{message}}</p>
            {{/if}}
        </div>
    </div>
</div>